{
  "type": "task",
  "rules": [
    {
      "ifchildstate": "active",
      "notparentstates": [ "active", "resolved" ],
      "setparentstateto": "active",
      "allchildren": false
    },
    {
      "ifchildstate": "new",
      "notparentstates": [ "active", "resolved", "new" ],
      "setparentstateto": "active",
      "allchildren": false
    },
    {
      "ifchildstate": "closed",
      "notparentstates": [],
      "setparentstateto": "closed",
      "allchildren": true
    }
  ]
}
